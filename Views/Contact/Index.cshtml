@model IEnumerable<ASPNetMVC.Models.Contact>

@{
  ViewData["Title"] =  "Listagem de contatos";
}

<h2>Contacts</h2>

<p>
  <a asp-action="Create">Create Contact</a>
</p>

<table class="table">
  <thead>
      <tr>
      <th>@Html.DisplayNameFor(model => model.Id)</th>
       <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Phone)</th>
         <th>@Html.DisplayNameFor(model => model.IsActive)</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(model => item.Id)
        </td>
          <td>
          @Html.DisplayFor(model => item.Name)
        </td>
          <td>
          @Html.DisplayFor(model => item.Phone)
        </td>
          <td>
          @Html.DisplayFor(model => item.IsActive)
        </td>
        <td>
          <a asp-action="Editar" asp-route-id="@item.Id">Edit</a>
           <a asp-action="Detalhes" asp-route-id="@item.Id">Details</a>
            <a asp-action="Deletar" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>